{
  "name": "bestgames-game-developer-tasks",
  "description": "BESTGAMES Game Developer Tasks - 3 interactive demos",
  "author": "Javier Moreno",
  "homepage": "https://javideas.github.io/bestgames-game-developer-tasks/",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "clean": "rimraf ./dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.4",
    "gh-pages": "^6.3.0",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@esotericsoftware/spine-pixi-v7": "^4.2.96",
    "@pixi/filter-motion-blur": "^5.1.1",
    "@pixi/particle-emitter": "^5.0.8",
    "gsap": "^3.14.2",
    "pixi.js": "^7.4.3"
  }
}
